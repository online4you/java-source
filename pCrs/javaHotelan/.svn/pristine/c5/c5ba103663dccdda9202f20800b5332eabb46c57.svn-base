<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.photel.data.hotelan.ddbb.hibernate.pojo">
	<class
		name="HibernateZones"
		table="zones"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="integer"
			column="id"
		>
		</id>
		<property
			name="lang"
			column="lang"
			type="string"
			not-null="false"
			length="250"
		/>
		<property
			name="description"
			column="description"
			type="string"
			not-null="false"
			length="250"
		/>
		
	</class>	
</hibernate-mapping>